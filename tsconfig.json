{
  "exclude": ["**/node_modules", "**/build"],
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "noErrorTruncation": false,
    "sourceMap": true,
    "declaration": true,
    "incremental": true,
    "composite": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["vitest/importMeta"],
    "paths": {
      "@mondrian-framework/docs": ["./packages/docs"],
      "@mondrian-framework/utils": ["./packages/utils"],
      "@mondrian-framework/model": ["./packages/model"],
      "@mondrian-framework/arbitrary": ["./packages/arbitrary"],
      "@mondrian-framework/advanced-types": ["./packages/advanced-types"],
      "@mondrian-framework/module": ["./packages/module"],
      "@mondrian-framework/middleware/rate-limiter": ["./packages/middleware/rate-limiter"],
      "@mondrian-framework/prisma": ["./packages/prisma"],
      "@mondrian-framework/rest": ["./packages/rest"],
      "@mondrian-framework/rest-fastify": ["./packages/rest-fastify"],
      "@mondrian-framework/graphql": ["./packages/graphql"],
      "@mondrian-framework/graphql-yoga": ["./packages/graphql-yoga"],
      "@mondrian-framework/aws-sqs": ["./packages/aws-sqs"],
      "@mondrian-framework/aws-lambda-sqs": ["./packages/aws-lambda-sqs"],
      "@mondrian-framework/aws-lambda-rest": ["./packages/aws-lambda-rest"],
      "@mondrian-framework/cron": ["./packages/cron"],
      "@mondrian-framework/example": ["./packages/example"]
    }
  },
  "references": [
    {
      "path": "packages/docs"
    },
    {
      "path": "packages/utils"
    },
    {
      "path": "packages/model"
    },
    {
      "path": "packages/advanced-types"
    },
    {
      "path": "packages/module"
    },
    {
      "path": "packages/middleware/rate-limiter"
    },
    {
      "path": "packages/prisma"
    },
    {
      "path": "packages/rest"
    },
    {
      "path": "packages/rest-fastify"
    },
    {
      "path": "packages/aws-sqs"
    },
    {
      "path": "packages/aws-lambda-sqs"
    },
    {
      "path": "packages/aws-lambda-rest"
    },
    {
      "path": "packages/cron"
    },
    {
      "path": "packages/graphql"
    },
    {
      "path": "packages/graphql-yoga"
    },
    {
      "path": "packages/example"
    }
  ]
}
