{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "src",
    "declaration": false,
    "strict": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}