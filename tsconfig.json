{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noErrorTruncation": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "sourceRoot": "./src",
    "declaration": true,
    "incremental": true,
    "composite": true,
    "skipLibCheck": true,
    "outDir": "build"
  },
  "exclude": [
    "**/node_modules",
    "build"
  ]
}